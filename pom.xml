   <reporting>
      <excludeDefaults>true</excludeDefaults>
      <plugins>
         <plugin>
            <inherited>false</inherited>
            <artifactId>maven-javadoc-plugin</artifactId>
            <configuration>
               <source>${javaVersion}</source>
               <aggregate>true</aggregate>
               <links>
                  <link>http://java.sun.com/j2ee/1.4/docs/api</link>
                  <link>http://java.sun.com/javase/6/docs/api/</link>
                  <link>http://jakarta.apache.org/commons/dbcp/apidocs/</link>
                  <link>http://jakarta.apache.org/commons/httpclient/apidocs/</link>
                  <link>http://jakarta.apache.org/commons/logging/apidocs/</link>
                  <link>http://jakarta.apache.org/commons/pool/apidocs/</link>
                  <link>http://logging.apache.org/log4j/docs/api/</link>
                  <link>http://www.slf4j.org/api/</link>
                  <link>http://lucene.apache.org/solr/api/</link>
                  <link>http://lucene.apache.org/java/docs/api/</link>
                  <link>http://static.springframework.org/spring/docs/2.0.x/api</link>
                  <link>http://icu-project.org/apiref/icu4j/</link>
                  <link>http://ws.apache.org/jaxme/apidocs/</link>
               </links>
               <groups>
                  <group>
                     <title>OpenPipe - Core</title>
                     <packages>no.trank.openpipe:no.trank.openpipe.api*:no.trank.openpipe.step:no.trank.openpipe.reader</packages>
                  </group>
                  <group>
                     <title>OpenPipe - Modules</title>
                     <packages>no.trank.openpipe.jdbc*:no.trank.openpipe.opennlp*:no.trank.openpipe.solr*</packages>
                  </group>
                  <group>
                     <title>OpenPipe - Parsers</title>
                     <packages>no.trank.openpipe.parse*</packages>
                  </group>
                  <group>
                     <title>OpenPipe - Web admin</title>
                     <packages>no.trank.openpipe.admin*</packages>
                  </group>
               </groups>
               <charset>${encoding}</charset>
               <encoding>${encoding}</encoding>
               <quiet>true</quiet>
            </configuration>
            <reportSets>
               <reportSet>
                  <reports>
                     <report>javadoc</report>
                  </reports>
               </reportSet>
            </reportSets>
         </plugin>
         <plugin>
            <artifactId>maven-project-info-reports-plugin</artifactId>
            <reportSets>
               <reportSet>
                  <id>parent-info</id>
                  <inherited>false</inherited>
                  <reports>
                     <report>dependency-convergence</report>
                     <report>project-team</report>
                     <report>mailing-list</report>
                     <report>issue-tracking</report>
                     <report>scm</report>
                  </reports>
               </reportSet>
               <reportSet>
                  <id>general-info</id>
                  <inherited>true</inherited>
                  <reports>
                     <report>index</report>
                     <report>dependencies</report>
                     <report>license</report>
                     <report>summary</report>
                  </reports>
               </reportSet>
            </reportSets>
         </plugin>
         <plugin>
            <inherited>false</inherited>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-jxr-plugin</artifactId>
            <configuration>
               <aggregate>true</aggregate>
               <linkJavadoc>true</linkJavadoc>
               <javadocDir>/apidocs</javadocDir>
               <inputEncoding>${encoding}</inputEncoding>
               <outputEncoding>${encoding}</outputEncoding>
            </configuration>
            <reportSets>
               <reportSet>
                  <reports>
                     <report>jxr</report>
                  </reports>
               </reportSet>
            </reportSets>
         </plugin>
      </plugins>
   </reporting>
